<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Common Layout -->
	<definition name="common" template="/WEB-INF/template/template-forward.jsp">
		<put-attribute name="body"		value="" />
	</definition>


	<!-- 기본 설정 -->
	<definition name="frag:/**/*" extends="common">
		<put-attribute name="body"	expression="${requestScope.BODY_URL}" />
	</definition>

	<definition name="view:/include/*" extends="common">
		<put-attribute name="body"	expression="${requestScope.BODY_URL}" />
	</definition>


</tiles-definitions>